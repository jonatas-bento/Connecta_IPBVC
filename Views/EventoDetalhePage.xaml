<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Connecta_IPBVC.Views.EventoDetalhePage"
             Title="Detalhes do Evento"
             BackgroundColor="#f5f7fa">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- BANNER / IMAGEM DO EVENTO -->
            <Image 
    Source="{Binding ImagemUrl}"
    Aspect="AspectFill"
    HeightRequest="220"
    BackgroundColor="#d9e1f2" />

            <!-- CARD PRINCIPAL -->
            <Border 
                Stroke="#e3e3e3"
                StrokeThickness="1"
                BackgroundColor="White"
                Padding="20"
                StrokeShape="RoundRectangle 20"
                Margin="15"
                Shadow="5">

                <VerticalStackLayout Spacing="16">

                    <!-- TÍTULO -->
                    <Label Text="{Binding Evento.Titulo}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1a1a1a"
                           LineBreakMode="WordWrap"/>

                    <!-- DATA -->
                    <HorizontalStackLayout Spacing="8">
                        <Image Source="calendar.png" WidthRequest="20"/>
                        <Label Text="{Binding Evento.DataFormatada}"
                               FontSize="16"
                               TextColor="#555"/>
                    </HorizontalStackLayout>

                    <!-- LOCAL -->
                    <HorizontalStackLayout Spacing="8">
                        <Image Source="pin.png" WidthRequest="20"/>
                        <Label Text="{Binding Evento.Local}"
                               FontSize="16"
                               TextColor="#2c7ef1"/>
                    </HorizontalStackLayout>

                    <!-- DESCRIÇÃO -->
                    <Label Text="{Binding Evento.Descricao}"
                           FontSize="17"
                           TextColor="#333"
                           LineBreakMode="WordWrap"/>

                    <!-- BOTÃO DE ANEXOS -->
                    <Button Text="Ver Anexos"
        Command="{Binding AbrirAnexosAsyncCommand}"
        BackgroundColor="#2c7ef1"
        TextColor="White"
        CornerRadius="12"
        HeightRequest="50"
        FontSize="18"
        Margin="0,10,0,0"
        Shadow="8"/>


                </VerticalStackLayout>

            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
