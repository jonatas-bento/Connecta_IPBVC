<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Connecta_IPBVC.Views.HomePage"
             Title="HomePage">
	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">

			<Label Text="Programação da Semana"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

			<CollectionView ItemsSource="{Binding EventosDaSemana}">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Frame CornerRadius="10" Padding="15" Margin="0,10"
                               BackgroundColor="#f4f4f4">
							<VerticalStackLayout>

								<Label Text="{Binding Titulo}"
                                       FontSize="20"
                                       FontAttributes="Bold" />

								<Label Text="{Binding DataHoraFormatada}"
                                       FontSize="16"
                                       TextColor="Gray" />

								<Label Text="{Binding Local}"
                                       FontSize="16"
                                       TextColor="#2c7ef1" />

							</VerticalStackLayout>
						</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>